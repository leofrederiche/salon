<p id="notice"><%= notice %></p>

<h1>Salons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Header</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Street</th>
      <th>District</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salons.each do |salon| %>
      <tr>
        <td><%= salon.name %></td>
        <td><%= salon.header %></td>
        <td><%= salon.email %></td>
        <td><%= salon.phone %></td>
        <td><%= salon.street %></td>
        <td><%= salon.district %></td>
        <td><%= salon.city %></td>
        <td><%= link_to 'Show', salon %></td>
        <td><%= link_to 'Edit', edit_salon_path(salon) %></td>
        <td><%= link_to 'Destroy', salon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

